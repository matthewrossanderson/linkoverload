source 'http://rubygems.org'

gem 'rails', '~> 3.2'
gem 'bootstrap-sass'
gem 'jquery-rails'

group :development do
  gem 'sqlite3', '1.3.5'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'   
  gem 'coffee-rails' 
  gem 'uglifier' 
end



group :test do
  # Pretty printed test output
  gem 'turn', '0.8.2', :require => false
end

group :production do
  gem 'pg'
end
